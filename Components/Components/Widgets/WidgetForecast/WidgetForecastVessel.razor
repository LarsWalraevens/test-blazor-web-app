@namespace test_blazor_web_app.Components

<style>
    .compass-vessel {
        position: relative;
        width: 7%;
        height: 28%;
        position: absolute;
        top: 50%;
        left: 50%;
        z-index: 10;
    }

    .compass-vessel.compass-vessel-actual {
        z-index: 11;

    }

    .compass-map .compass-map-inner {
        width: 28%;
        min-height: 28%;

        z-index: 3;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 100%;
        background: linear-gradient(to bottom, #4DB0F4 0%, #67C0EF 100%);
        flex-grow: 1;
        box-shadow: inset 0px 0px 0px 2px rgba(1, 1, 1, 1%);
    }

    .compass-map .compass-map-positioning {
        width: 55%;
        min-height: 55%;

        z-index: 2;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 100%;
        background: transparent;
        flex-grow: 1;
    @*box-shadow:inset0px0px0px2pxrgba(1,1,1,3%);*@
    }

    .compass-vessel.compass-vessel-actual .compass-vessel-top,
    .compass-vessel.compass-vessel-actual .compass-vessel-base {
        background-color: rgba(30, 255, 0, 40%) !important;
    }

    .compass-vessel.compass-vessel-actual .compass-vessel-base {
        box-shadow: inset 0px -1px 0px 1px rgba(30, 255, 0, 100%) !important;
    }

    .compass-vessel.compass-vessel-actual .compass-vessel-top {
        box-shadow: inset 0px 1px 0px 1px rgba(30, 255, 0, 100%) !important;
    }

    .compass-vessel .compass-vessel-top {
        position: absolute;
        display: inline-block;
        width: 100%;
        height: 30%;
        top: 0%;
        border-top-left-radius: 1000%;
        border-top-right-radius: 1000%;
        box-shadow: inset 0px 1.5px 0px 1px rgba(1, 1, 1, 0.2);
        background-color: white;
    }

    .compass-vessel .compass-vessel-base {
        position: absolute;
        bottom: 0%;
        height: 70%;
        width: 100%;
        border-bottom-left-radius: 10%;
        border-bottom-right-radius: 10%;
        box-shadow: inset 0px -1.5px 0px 1px rgba(1, 1, 1, 0.2);
        background-color: white;
    }
</style>


<div class="compass-vessel @(IsActual == true ? "compass-vessel-actual" : null)"
    style="transform: translate(-50%, -50%) rotate(@(Degrees)deg);">
    <span class="compass-vessel-base" />
    <span class="compass-vessel-top" />
</div>

@code {
    [Parameter] public decimal Degrees { get; set; }

    [Parameter] public bool IsActual { get; set; }
}
