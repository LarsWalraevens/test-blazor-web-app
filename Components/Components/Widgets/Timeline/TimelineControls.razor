@namespace test_blazor_web_app.Components

@using DevExpress.Blazor
@inject IJSRuntime JS
@using System.Globalization

@code {
    [Parameter] public int CurrentSliderIndex { get; set; }
    [Parameter] public int MaxSliderPoints { get; set; }
    [Parameter] public DateTime SliderDate { get; set; }
    [Parameter] public EventCallback TogglePlayPause { get; set; }
    [Parameter] public EventCallback Stop { get; set; }
    [Parameter] public EventCallback<ChangeEventArgs> Seek { get; set; }
    [Parameter] public string PlayPauseIcon { get; set; }
}

<div class="controls">
    <button class="btn btn-primary" @onclick="TogglePlayPause">
        <i class="bi @PlayPauseIcon"></i>
    </button>
    <button class="btn btn-danger" @onclick="Stop">
        <i class="bi bi-stop"></i>
    </button>
    <div class="slider-container">
        <input type="range" min="0" max="@MaxSliderPoints" value="@CurrentSliderIndex" @oninput="Seek"
            class="timeline-slider" />
        <div class="slider-label" style="left: @((CurrentSliderIndex / (double)MaxSliderPoints) * 100)%">
            @SliderDate.ToString("g", CultureInfo.InvariantCulture)
        </div>
    </div>
</div>

<style>
    .controls {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
    }

    .slider-container {
        position: relative;
        flex-grow: 1;
        margin: 0 15px;
    }

    .timeline-slider {
        width: 100%;
    }

    .slider-label {
        position: absolute;
        top: -30px;
        background: #fff;
        border: 1px solid #ddd;
        padding: 2px 5px;
        font-size: 12px;
        color: #333;
        white-space: nowrap;
        transform: translateX(-50%);
        pointer-events: none;
    }
</style>
